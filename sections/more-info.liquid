<section class="more-info">
  <div class="more-info-wrapper">
    {%- if section.settings.text != blank -%}
      <h1>THE ULTIMATE BEAUTY ESSENTIALS KIT</h1>
    {%- else -%}
      <h1>{{ block.settings.text | escape }}</h1>
    {%- endif -%}

    {%- if section.settings.text2 != blank -%}
      <p>
Elevate your skincare routine with our exclusive collection of Coscometic beauty essentials. From revitalizing cleaners to luxurious creams, hydrating gels, soothing toners, and nourishing lotions, our products are designed to enhance your natural glow and keep your skin healthy and radiant. Experience the perfect blend of science and nature, tailored for both men and women.
      </p>
    {%- else -%}
      <p> {{ block.settings.text2 | escape }}</p>
    {%- endif -%}

    <button>Shop</button>
  </div>
</section>

<style>
  .more-info {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    display: flex;
    justify-content: center;
    margin-top: 50px;
  }

   .more-info-wrapper{
      display: flex;
      flex-direction: column;
      width: 500px;
      justify-content: center;
      align-items: center;
      font-family: 'Poplin', sans-serif;
   }

   .more-info-wrapper h1 {
      font-size: 30px;
      text-align: center;
      margin:0;
      letter-spacing: 5px;
      
   }

.more-info-wrapper p {
     text-align: center; 
}
   .more-info-wrapper button {
      padding: 10px 20px 10px 20px;
      background-color: black;
      border: none;
      color: white;
      border-radius: 20px;
      cursor: pointer;
      margin-bottom:40px;
   }

   .more-info-wrapper button:hover {
      background-color: rgb(185, 185, 185);

   }
</style>
{% schema %}
{
  "name": "More-info",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "default text"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text2",
      "default": "default text"
    }
  ],
  "presets": [
    {
      "name": "more-info"
    }
  ]
}
{% endschema %}
