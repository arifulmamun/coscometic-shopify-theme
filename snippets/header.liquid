<header class="header-nav">
  <div class="logo-container">
    {% comment %} <h1>{{ shop.name }}</h1> {% endcomment %}
    <a href="/" class="logo-link"> <img class="logo" width="40" height="40" loading="lazy" src="{{ 'logo.png' | asset_url }}" alt="Logo">
      <span class="brand-name">coscometic</span>
    </a>
  </div>

  <div>
    <ul class="middle-nav-links">
      {% for link in linklists['main-menu'].links -%}
        <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor %}
    </ul>
  </div>

  <div class="right-nav-items">
    <a href="/search"><img class="search-img" width="18" height="18" loading="lazy" src="{{ 'search.jpg' | asset_url }}"></a>
    <a href="/user"><img class="user-img" width="40" height="35" loading="lazy" src="{{ 'user.jpg' | asset_url }}"></a>
    <a href="/cart"><img class="shopping-img" width="30" height="30" loading="lazy" src="{{ 'cart.png' | asset_url }}"></a>
  </div>
</header>

<style>

.header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 1px;
    background-color: white;
    padding: 0 30px 0 30px;
    font-family: 'Poplin', sans-serif;
}
.logo-container { 
    display: flex; 
    align-items: center; 
}
  
.logo-link { 
    display: flex; 
    align-items: center; 
    text-decoration: none; 
    color: inherit;
}
.logo {
    margin-top: 7px;
    margin-left: 10px;  
}
.brand-name { 
    font-family: 'Poplin', sans-serif;
    font-size: 30px; 
    font-weight: 400; 
    margin: 0;
    margin-left:5px;
}
.middle-nav-links {
    display: flex;
    font-family: 'Poplins', sans-serif; 
    font-size: 14px; 
    font-style: normal; 
    font-weight: 400;
}

.middle-nav-links li {
    list-style-type: none;
    padding: 10px;
}

.middle-nav-links li:hover {
    text-decoration: underline;
}

.middle-nav-links a {
    text-decoration: none;
    color: inherit;
}

.right-nav-items {
    display: flex;
    align-items: center;
  
}
.user-img {
    cursor: pointer;
    margin-bottom: 0; 
}
.search-img {
    cursor: pointer;
    margin-bottom: 0; 
}

.shopping-img {
    cursor: pointer;
    margin-bottom: 0; 
}

  
</style>
